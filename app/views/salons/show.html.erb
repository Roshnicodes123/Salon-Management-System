      <div class="col text-center">
        <% if current_user %>
          <%= link_to "Book Appointment", new_salon_appointment_path(salon_id: @salon.id), class: "btn btn-warning" %>
          <%= link_to "Show Appointments", salon_appointments_path(@salon), class: "btn btn-primary" %>
        <% else %>
          <%= link_to " Appointments", salon_appointments_path(salon_id: @salon.id), class: "btn btn-warning" %>
        <% end %>
      </div>
    </div>
    

  </div>
</div>
