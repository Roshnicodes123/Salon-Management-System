<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field col-sm-3">
    <%= f.label :email,class: "control-label" %><br />
    <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form- col-sm-3">
    <%= f.label :password , class: "control-label"%><br />
    <%= f.password_field :password,class: "form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
