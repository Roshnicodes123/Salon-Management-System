<div class="container">
<div class="container-fluid position-relative" style="background-image: url('<%= url_for(@salon.cover_image) %>'); background-size: cover; height: 100vh;">
<div class="center" style="color: white;">

  <h2>Your Appointment Details</h2>
  <p><strong>Barber:</strong> <%= @appointment.barbar.username %></p>
  <p><strong>Service:</strong> <%= @appointment.service.name %></p>
  <p><strong>Time Slot:</strong> <%= @appointment.time_slot.formatted_start_time %> - <%= @appointment.time_slot.end_time.strftime('%H:%M') %></p>
  <p><strong>Salon:</strong> <%= @appointment.salon.name %></p>
  <!-- Add more details as needed -->

  <div>
    <%= link_to "Back to Appointments", salon_appointments_path(@appointment.salon) %>
  </div>
</div>
</div>
</div>
