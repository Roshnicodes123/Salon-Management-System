<%= form_for [@salon, @appointment], url: salon_appointment_payment_path(@salon, @appointment), method: :post do |f| %>
  <div class="form-row">
    <label for="payment-method-id">Select Payment Method:</label>
    <%= f.select :payment_method_id, [['Credit Card', 'credit_card'], ['Debit Card', 'debit_card']], { prompt: 'Choose payment method' }, id: 'payment-method' %>
  </div>
  
  <div class="form-row">
    <label for="card-element">Card Details:</label>
    <div id="card-element">
      <!-- Stripe card element will be inserted here -->
    </div>
    <div id="card-errors" role="alert"></div>
  </div>

  <%= hidden_field_tag :source, nil, id: 'stripe-source' %>
  <%= submit_tag 'Submit Payment' %>
<% end %>
